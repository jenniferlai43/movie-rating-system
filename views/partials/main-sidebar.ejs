<!-- views/partials/sidebar.ejs -->
<div class = "container-sidebar">
	<div class = "nav">
		<a href = "/"><li>Home</li></a>
		<!--<li id = "collapsible_trigger">Add Movie</li>-->
		<p>Sort By:</p>
		<select id = "sort_option">
			<option id = "ma" value = "ma">Movie Name (asc.)</option>
			<option id = "md" value = "md">Movie Name (des.)</option>
			<option id = "rd" value = "rd">Rating (des.)</option>
			<option id = "ra" value = "ra">Rating (asc.)</option>
		</select>
		<button id = "sort_button" type="button">Sort</button>
		<p>View by Genre:</p> 
		<select id = "view_option">
			<% for(var i=0; i<genreList.length; i++) { %>
				<option><%= genreList[i] %></option>
			<% } %>
		</select>
		<button id = "view_button" type="button">View</button>
		<div class = "collapse_form">
			<!--<form action = '/movies' method = 'POST'>-->
			<form id = "rating_input">
				<p>Movie Name</p>
				<input type="text" name="movie" id = "movie" placeholder="Movie Name..." required />
				<p>Genre</p>
				<input type="text" name="genre" id = "genre" placeholder="Genre..." required />
				<p>Rating (1 to 10)</p>
				<input type="number" name="rate" id = "rate" placeholder="Rating..." min="0" max="10" step = "0.1" required />
				<p>Description</p>
				<!--
				<input type="text" name="description" id = "description" placeholder="Description..." required />
				-->
				<textarea rows="3" name = "description" id = "description" placeholder= "Description" required ></textarea>
				<button type="submit">Add Movie</button>
			</form>
		</div>
	</div>
</div>
