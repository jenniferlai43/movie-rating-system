<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<% include ../partials/header %>
		<% include ../partials/main-sidebar %>
		<div class = "movie-list">
			<ul>
				<% for(var i=0; i<list.length; i++){ %>
					<div class = movie_item>
						<ul id = "movie">
							<li id = "title"><%=list[i].movie %></li>
							<div class = "details">
								<li>Rate: <%=list[i].rate %></li>
								<li>Genre: <%=list[i].genre %></li>
								<li>Description: <%=list[i].description %></li>
								<li>Created at: <%=list[i].created_at %></li>
								<li>Updated at: <%=list[i].updated_at %></li>
							</div>
						</ul>
						<div class = image_wrap>
							<a href = "/edit/<%=list[i]._id %>"><img id = "edit_icon" src = "https://image.flaticon.com/icons/svg/61/61456.svg" /></a>
							<img id = "delete_icon" data-id = "<%=list[i]._id %>" src = "https://openclipart.org/image/2400px/svg_to_png/16155/milker-X-icon.png" / >
						</div>
						<br />
					</div>
				<% } %>
			</ul>
		</div>
	</body>
</html>
