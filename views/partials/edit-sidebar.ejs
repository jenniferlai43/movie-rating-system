<!-- views/partials/sidebar.ejs -->
<div class = "container-sidebar">
	<div class = "nav">
		<a href = "/"><li class = "butt">Home</li></a>
		<div class = "collapse_form">
			<!--<form action = '/movies' method = 'POST'>-->
			<form id = "rating_input_edit" data-id = "<%=rating._id %>">
				<p>Movie Name</p>
				<input type="text" name="movie" id = "movie" value = "<%=rating.movie %>" required />
				<p>Genre (separate by comma)</p>
				<input type="text" name="genre" id = "genre" value = "<%=rating.genre %>" required />
				<p>Rating (1 to 10)</p>
				<input type="number" name="rate" id = "rate" value = "<%=rating.rate %>" min="0" max="10" step = "0.1" required />
				<p>Description</p>
				<!--
				<input type="text" name="description" id = "description" placeholder="Description..." required />
				-->
				<textarea rows="3" name = "description" id = "description" required ><%=rating.description %></textarea>
				<button class = "butt" type="submit" id = "update_movie">Update Movie</button>
			</form>
		</div>
	</div>
</div>
